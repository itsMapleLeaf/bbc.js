{
  "name": "bbc.js",
  "version": "0.3.0",
  "description": "a small, flexible bbc parser for JavaScript",
  "main": "dist/bbc.min.js",
  "author": "just nobody",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-preset-babili": "^0.0.12",
    "babel-preset-env": "^1.4.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "prettier-eslint": "^6.1.0"
  },
  "scripts": {
    "build:dev": "babel src/bbc.js -o dist/bbc.js --source-maps",
    "build:min": "babel src/bbc.js -o dist/bbc.min.js --source-maps --presets babili",
    "build": "npm run build:dev && npm run build:min",
    "test": "ava spec/*"
  }
}
